{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 100,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": ["*.html", "*.css"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ],
  "arrowParens": "always",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf"
}