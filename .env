# Server Configuration
PORT=5000                # Port where the server will run

# Database Configuration
DB_HOST=localhost        # Database host (e.g., localhost or IP address)
DB_USER=root             # Database username
DB_PASSWORD=yourpassword # Database password
DB_NAME=religious_web    # Database name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key              # Secret key for JWT token
JWT_EXPIRES_IN=7d                           # JWT expiration time (e.g., 7 days)

# Email Service Configuration
EMAIL_SERVICE=smtp                           # SMTP service provider
EMAIL_HOST=smtp.example.com                  # SMTP host address
EMAIL_PORT=587                               # SMTP port (e.g., 587 for TLS)
EMAIL_USER=your-email@example.com            # Sender email address
EMAIL_PASSWORD=your-email-password           # Email account password

# Payment Gateway Configuration
PAYMENT_API_KEY=your_payment_api_key         # API key for payment gateway
PAYMENT_API_SECRET=your_payment_api_secret   # API secret for secure transactions

# Application URL
CLIENT_URL=http://localhost:3000             # URL for frontend (React/Angular app)

# Logging Configuration
LOG_LEVEL=info                               # Log level (e.g., info, error, debug)

# Environment Mode
NODE_ENV=development                         # Mode: development, production, or test
